<article class="comment-section">
  <% if (comment.description) { %>
  <p class="comment-description"><%= comment.description %></p>
  <% } %> <% if (comment.date_added) { %> <% var commentDate = new
  Date(comment.date_added); var day = commentDate.getDate(); var month =
  commentDate.toLocaleString('default', { month: 'short' }); var year =
  commentDate.getFullYear(); var formattedDate = day + ' ' + month + ' ' + year;
  %>
  <p class="comment-date"><%= formattedDate %></p>
  <% } %>
</article>
