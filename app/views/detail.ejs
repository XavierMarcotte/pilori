<%- include('partials/header') %>
<main class="content">
  <section class="segment">
    <article class="detail">
      <header class="detail-header">
        <div class="detail-intro">
          <h1 class="detail-title"><%= website.title %></h1>
        </div>
      </header>
      <ul class="detail-list">
        <% if (website.level) { %>
        <li><span class="detail-label">Type</span> : <%= website.level %></li>
        <% } %> <% if (website.device) { %>
        <li>
          <span class="detail-label">Support</span> : <%= website.device %>
        </li>
        <% } %>
      </ul>
      <% if (website.description) { %>
      <p class="detail-content"><%= website.description %></p>
      <% } %>
      <footer class="detail-actions">
        <a class="btn" href="<%= website.address %>" target="_blank"
          >Voir le disfonctionnement</a
        >
        <a class="btn" href="/tomates/<%= website.slug %>/commentaire"
          >Ajouter un commentaire</a
        >
      </footer>
    </article>
    <h2 class="comment-h2">Commentaires</h2>
    <% for (const comment of comments) { %> <%- include('partials/comment' , {
    comment }) %> <% } %>
    <footer class="segment-actions">
      <a href="/tomates" class="btn"> Retour Ã  la liste </a>
    </footer>
  </section>
</main>
<%- include('partials/footer') %>
